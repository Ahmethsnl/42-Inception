services:
  nginx:
      container_name: nginx
      build: ./requirements/nginx
      depends_on:
        - wordpress
      ports:
        - 443:443
      volumes:
        - wordpress_data:/var/www/html
      restart: always
      networks:
        - network
      env_file:
        - .env

  mariadb:
    container_name: mariadb
    build: ./requirements/mariadb
    volumes:
      - mariadb_data:/var/lib/mysql
    networks:
      - network
    restart: always
    env_file:
      - .env
    environment:
      MYSQL_ROOT_PASSWORD: ${MYSQL_ROOT_PASSWORD}
      MYSQL_PASSWORD: ${MYSQL_PASSWORD}

  wordpress:
    container_name: wordpress
    depends_on:
      - mariadb
    build: ./requirements/wordpress
    restart: always
    env_file:
      - .env
    environment:
      WP_PWD: ${WP_PWD}
      WP_ADMIN_PWD: ${WP_ADMIN_PWD}
      MYSQL_PASSWORD: ${MYSQL_PASSWORD}
    volumes:
      - wordpress_data:/var/www/html
    networks:
      - network

      
volumes:
  mariadb_data:
    driver: local
    driver_opts:
      type: none
      device: C:\your_login\data\mysql
      o: bind
  wordpress_data:
    driver: local
    driver_opts:
      type: none
      device: C:\your_login\data\wordpress
      o: bind
      
networks:
  network:
    driver: bridge